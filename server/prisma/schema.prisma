generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relasi: Events yang dibuat oleh user ini
  createdEvents Event[]  @relation("CreatedEvents")
  
  // Relasi: Events yang diikuti oleh user ini
  joinedEvents  Event[]  @relation("JoinedEvents")
  transactions  Transaction[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  location    String
  eventDate   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relasi: User yang membuat Events ini
  author      User     @relation("CreatedEvents", fields: [authorId], references: [id])
  authorId    String
  
  // Relasi: User yang ikut Events ini
  participants User[]   @relation("JoinedEvents")

  price          Int
  maxParticipants Int
  transactions    Transaction[]
}

// ... (model User dan Event yang sudah ada) ...

model Transaction {
  id            String   @id @default(cuid())
  orderId       String   @unique
  status        String   // e.g., "PENDING", "SUCCESS", "FAILED"
  amount        Int
  createdAt     DateTime @default(now())

  // Relasi ke User dan Event
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  event         Event    @relation(fields: [eventId], references: [id])
  eventId       String

  // Tambahkan relasi balik di model User dan Event
}